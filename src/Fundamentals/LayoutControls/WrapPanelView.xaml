<Window x:Class="_03_LayoutControls.WrapPanelView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_03_LayoutControls"
        mc:Ignorable="d"
        Title="WrapPanelView" Height="450" Width="800">
    <Grid>

        <WrapPanel Orientation="Vertical">
            <Button Width="200" Height="200">1</Button>
            <Button Width="200" Height="200">2</Button>
            <Button Width="200" Height="200">3</Button>
            <Button Width="200" Height="200">4</Button>
            <Button Width="200" Height="200">5</Button>
            <Button Width="200" Height="200">6</Button>
            <Button Width="200" Height="200">7</Button>
            <Button Width="200" Height="200">8</Button>
            <Button Width="200" Height="200">9</Button>
            <Button Width="200" Height="200">10</Button>
        </WrapPanel>
        
    </Grid>
</Window>
